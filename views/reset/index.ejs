<%include ../partials/header.ejs %>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h3>Reset Password</h3>
		</div>

		<div class="col-xs-12 col-md-6 col-lg-4" style="margin: 30px auto;">
			<form action="/reset" method="POST">
				<input type="hidden" name="_csrf" value="<%=csrfToken%>">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="Username"></input>
				</div>
				<div class="form-group">
					<input class="form-control" type="email" name="email" placeholder="Email"></input>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Reset</button>
				</div>
			</form>
			<p><a href="/login">Go back to login</a></p>
		</div>
	</div>
</div>

<%include ../partials/footer.ejs %>
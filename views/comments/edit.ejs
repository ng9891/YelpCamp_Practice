<%include ../partials/header.ejs %>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<!-- <h1><%=camp.name%></h1> -->
			<h3>Edit comment</h3>
		</div>

		<div class="col-xs-12 col-md-6 col-lg-4" style="margin: 30px auto;">
			<form action="/campgrounds/<%=camp.id%>/comments/<%=comment.id%>/edit?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control" name="text"><%=comment.text%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds/<%=camp._id%>/">Go back</a>
		</div>
	</div>
</div>



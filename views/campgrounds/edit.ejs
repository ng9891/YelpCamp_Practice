<%include ../partials/header.ejs %>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Edit <%=camp.name %></h1>
		</div>

		<div class="col-xs-12 col-md-6 col-lg-4" style="margin: 50px auto;">
			<form action="/campgrounds/<%=camp.id%>/edit?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name" value="<%=camp.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL"
						value="<%=camp.image%>">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="description"><%=camp.description%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Update</button>
				</div>
			</form>
			<a href="/campgrounds/<%=camp.id%>">Go back</a>
		</div>
	</div>
</div>


<%include ../partials/footer.ejs %>